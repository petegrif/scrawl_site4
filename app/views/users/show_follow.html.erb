<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/grav_name' %>
    </section>
    <section>
      <%= render 'shared/background_user_info' %>
    </section>
    <section>
      <%= render 'shared/stats' %>
      <% unless @users.empty? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, :size => 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= yield(:title) %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
      <%= will_paginate @users %>
    <% end %>
  </div>
</div>
